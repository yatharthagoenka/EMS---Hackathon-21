<div style="display: flex;flex-direction: row;margin-left: 60px; margin-bottom: 30px;">
    <form action="/events" method="GET">
        <div class="tagsearch"><input id="search" type="search" placeholder="Search events" name="title" value="<%= searchOptions.title %>" autofocus /></div>
    </form>
    <a href="/events/new"><svg xmlns="http://www.w3.org/2000/svg" style="margin-left: 40px; margin-top: 7px;" width="46" height="46" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"/>
        </svg></a>
</div>


    <br><br><br><br>

    <div style="width: 1500px;margin-left: 50px;">
        <div class="flexcontainer" style="margin-left: 80px;">
            <% events.forEach(event => { %> 
                <a href="/events/<%= event.id %>" class="card">
                    <img src="<%= event.coverImagePath %>" class="card__image" alt="" />
                    <div class="card__overlay">
                    <div class="card__header">
                        <svg class="card__arc" xmlns="http://www.w3.org/2000/svg"><path /></svg>
                        <div class="card__header-text">
                        <h3 class="card__title"><%= event.title %></h3>            
                        <span class="card__status"><%= event.username %></span>
                        </div>
                    </div>
                    <p class="card__description"><%= event.description %></p>
                    </div>
                </a> 
            <% }) %> 
        </div>
    </div>


</div>

<script src="https://unpkg.com/aos@next/dist/aos.js"></script>
<script>
    AOS.init();
</script>