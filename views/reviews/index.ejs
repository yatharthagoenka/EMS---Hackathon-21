        <% reviews.forEach(review=>{ %> 
                    <a href="/reviews/<%= review.id %>/edit" class="data-card">
                    <div style="display: flex;flex-direction: row;justify-content: space-between;">
                        <div><form style="margin-left: -20px;margin-top: -20px;margin-bottom: 30px;" method="POST" action="/reviews/<%= review.id %>?_method=DELETE">
                            <button type="submit" class="revdelb">Ã—</button>
                        </form></div>
                        <div><h4 style="font-size: 11px;margin-right: -30px;margin-top: -20px;"><%= review.username %></h4></div>
