<style>
@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap');

#tagsbg {
    width: 100%;
    height: 200vh;
    background-color: #100e17;
    font-family: 'Open Sans', sans-serif;
    margin-top: -4%;
    display: flex;
    flex-direction: column;
    padding-bottom: 200px;
}

.tagshowhead{
    width: 1200px;
    margin-left: 12%;    
}
.tagname{
    width: fit-content;
    padding-left: 15px;
    padding-right: 15px;
    font-family: 'Roboto', sans-serif;
    font-size: 2.5rem;
    font-weight: 500;
    transition: 0.5s;
    text-transform: uppercase;
    background: linear-gradient(to bottom, #16b4ae 0%,#16b4ae 100%);
    background-position: 0 100%;
    background-repeat: repeat-x;
    background-size: 4px 4px;
    color: rgb(255, 255, 255);
    text-decoration: none;
    transition: background-size .2s;
}

.tagname:hover {
  background-size: 4px 70px;
  /* transition: 0.2s; */
}

.headbuttons{
    display: flex;
    flex-direction: row;
}

.tagbarbutton{
    display: flex;
    flex-direction: column;
    align-items: center;
}

.tagshowhead{
    margin-top: 7%;
}

</style>

<div id="tagsbg">

    <div class="tagshowhead">
        <br>
        <div class="tagbarbutton">
            <div class="tagname"><h2><span> <%= tag.name %>  </span></h2></div>
            <br>
            <div class="headbuttons">
                <div><a href="/tags" style="margin-right: 40px;"><i class="fas fa-arrow-circle-left" style="color: #edff94;font-size: 2.5rem;"></i></a></div>  
                <div><a href="/tags/<%= tag.id %>/edit"><i class="fas fa-exclamation-circle" style="color: #90f5b5;font-size: 2.5rem;"></i></a></div>
            </div>
            
        </div>
    </div>
    <br><br>

    <div style="margin-left: 100px; padding-top: 100px;">

        <% if(eventsByTag.length>0) { %> 
            <h2 style="font-size: 2rem;font-weight: 350;color: rgb(233, 233, 233);font-family: 'Poppins',sans-serif;">Events by Tag</h2>
            <br><br>
            <div id="postcardcontainer">
            <% eventsByTag.forEach(event => { %> 
                    <a href="/events/<%= event.id %>" class="postcard" style="width: 250px; height: 370px;">
                        <img src="<%= event.coverImagePath %>" class="postcard__image" alt="" />
                        <div class="postcard__overlay">
                        <div class="postcard__header">  
                            <svg class="postcard__arc" xmlns="http://www.w3.org/2000/svg"><path /></svg>                     
                            <img class="postcard__thumb" src="https://i.ibb.co/KbcPFHv/synapse-logo.png" alt="" />        
                            <div class="postcard__header-text">
                            <h3 class="postcard__title"><%= event.title %></h3>            
                            <span class="postcard__status"><%= event.username %></span>
                            </div>
                        </div>
                        <p class="postcard__description"><%= event.description %></p>
                        </div>
                    </a> 
            <% }) %> 
        </div>
        <% } %> 

    </div>

</div>
